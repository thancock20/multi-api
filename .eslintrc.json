{
  "extends": [
    "airbnb-base",
    "prettier",
    "plugin:react/recommended",
    "plugin:jsx-a11y/strict"
  ],
  "plugins": ["react", "jest", "jsx-a11y"],
  "env": {
    "jest/globals": true,
    "browser": true
  },
  "rules": {
    "react/react-in-jsx-scope": 0,
    "no-plusplus": 0
  },
  "parser": "babel-eslint",
  "parserOptions": {
    "ecmaFeatures": {
      "jsx": true
    }
  },
  "globals": {
    "shallow": false,
    "render": false,
    "mount": false
  }
}
